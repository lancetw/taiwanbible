!!! 5
- logined = false
= render :partial => "/templates/iehack"
%html.no-js(lang="zh-tw" ng-app)
  %head
    %title= yield(:title)
    = render :partial => "/templates/head"
  %body{:class => yield(:bodyClass)}
    = render :partial => "/templates/noie"
    #wrapper.page
      #container
        = render :partial => "/templates/menu"
        = render :partial => "/templates/header"
        = render :partial => "/templates/sidebar"
        %main
          = yield
        - if logined
          = render :partial => "/templates/userpanel"
        - else
          = render :partial => "/templates/loginpanel"
    = render :partial => "/templates/footer"
    = render :partial => "/templates/script"



